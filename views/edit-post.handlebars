<article>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div class="mb-3">
            <label for="post-title" class="form-label">Title</label>
            <input type="text" name="post-title" value="{{post.title}}"/>
        </div>
        <div class="mb-3">
            <label for="post-body" class="form-label">Text</label>
            <textarea name="post-body" id="edit-body">{{post.body}}</textarea>
        </div>
        <div>
            <button type="submit" class="btn btn-outline-success">Save Post</button>
            <button type="button" class="delete-post-btn btn btn-outline-danger">Delete Post</button>
        </div>
    </form>
</article>

<script src="./javascript/edit-post.js"></script>