<section>
    <h2>Create a New Post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-body">Body Text</label>
            <textarea id="post-body" name="post-body"></textarea>
        </div>
        <div>
            <button type="submit">Create Post</button>
        </div>
    </form>
</section>

{{#if posts.length}}
<section class="user-posts">
    <h2 id="user-posts">Your Posts</h2>
    <div class="post-previews">
        {{#each posts as |post|}}
        <article class="post">
            <div>
                <h3>{{title}}</h3>
                <h4>Posted by {{user.username}} on {{format_date created_at}}</h4>
                <a id="edit-post" href="dashboard/edit/{{post.id}}">Edit Post</a>
            </div>
        </article>
        {{/each}}
    </div>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>